<!DOCTYPE html>
<html>
<head>
  <title>Share</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <ul class="nav nav-pills pull-right">
  <li class="pull-left <%= 'active' if current_page?(root_path)  %>">
    <%= link_to "Home", root_path, class: "brand" %>
  </li>

 <%- if !user_signed_in? -%>
            <li class="<%= 'active' if params[:controller] == 'devise/sessions' %>"><%= link_to 'Sign In', new_user_session_path %></li>
            <%- else -%>
            <li class="<%= 'active' if current_page?(home_dashboard_path) %>"><%= link_to 'Dashboard', home_dashboard_path %></li>
            <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
            </li>
            <%- end -%>
  </ul>
</div>


    <div class="container">
  <% flash.each do |name, msg| %>
  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
    <a class="close" data-dismiss="alert">Ã—</a>
    <%= msg %>
    <% end %>
  </div>
</div>


      <%= yield %>


     <script>
$('.navbar li').click(function(e) {
    $('.navbar li.active').removeClass('active');
    var $this = $(this);
    if (!$this.hasClass('active')) {
        $this.addClass('active');
    }
    e.preventDefault();
});
  </script>

 
  </body>
     <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  </html>

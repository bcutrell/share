<div class="container">
<div class="row">
  <div class="span6">
<%= simple_form_for @group, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Group </legend>

    <%= f.input :name, label: "Group Name" %>
    <%= f.input :password, class: "group_password" %>
    <%= f.input :password_confirmation, class: "group_password_confirmation"%>


    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', home_dashboard_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
</div>
  </div>
    </div>